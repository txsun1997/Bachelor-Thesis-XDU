import os

env = Environment(ENV = os.environ,
                  PDFLATEX = 'xelatex')

tmpl = Glob( 'xduthesis.c*' )

pdf = env.PDF(Glob('thesis-*.tex'))
Depends(pdf, ['abstract.tex', 'refs.bib'])
Depends(pdf, Glob('ch*.tex'))

